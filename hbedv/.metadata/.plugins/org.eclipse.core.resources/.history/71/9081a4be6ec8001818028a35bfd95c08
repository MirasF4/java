	        result = (Integer) Util.nvl(asm.getKeys(KochbuchBean.AsmRezept.KEY_MEN_ID).get(row),new Integer(0));
	    }
	    return result;
	}
	
	public String getMenueBez() {
	    String result = "Keine Daten vorhanden!";
	    int row = this.getAsmRow();
